<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.LoginActivity">

    <ImageView
        android:id="@+id/login_img_kickshare"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_kickshare" />

    <ImageView
        android:id="@+id/login_img_login"
        android:layout_centerInParent="true"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_below="@+id/login_img_kickshare"
        android:src="@drawable/icon_login" />

    <TextView
        android:id="@+id/login_tv_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/login_img_login"
        android:textSize="10sp"
        android:text="휴대폰 번호"
        android:visibility="visible" />

    <EditText
        android:id="@+id/login_et_number"
        android:layout_below="@+id/login_tv_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:inputType="phone"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:hint="휴대폰 번호" />

    <TextView
        android:id="@+id/login_tv_password"
        android:layout_below="@+id/login_et_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:text="비밀번호"
        android:visibility="visible" />

    <EditText
        android:id="@+id/login_et_password"
        android:layout_below="@id/login_tv_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:inputType="textPassword"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:hint="비밀번호" />

    <Button
        android:id="@+id/login_btn"
        android:layout_below="@+id/login_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="30dp"
        android:background="#66CCFF"
        android:textStyle="bold"
        android:text="로그인"
        android:textSize="12sp"
        android:textColor="@android:color/white" />

</RelativeLayout>