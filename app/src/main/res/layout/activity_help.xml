<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.help.HelpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/help_layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/help_img_back"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:src="@drawable/icon_back" />

            <ImageView
                android:id="@+id/help_img_kickshare"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_kickshare" />

            <ImageView
                android:id="@+id/help_img_helpLabel"
                android:layout_width="162dp"
                android:layout_height="60dp"
                android:layout_below="@+id/help_img_kickshare"
                android:layout_centerInParent="true"
                android:src="@drawable/img_help" />

        </RelativeLayout>

        <ImageView
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="370dp"
            android:src="@drawable/img_helpmenu" />

        <TextView
            android:id="@+id/help_tv_kakao"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:text="카카오톡 고객상담  @kickshare"
            android:textSize="12sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:text="평일, 주말 10:00 ~ 18:00"
            android:textSize="12sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:text="(점심시간 13:00 ~ 14:00 / 공휴일 휴무)"
            android:textSize="12sp"
            android:textColor="#666666"/>

    </LinearLayout>

</FrameLayout>
