<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radius"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/success_rent_img"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/img_rentok" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/success_rent_tv_timeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대여 시작 시간 "
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/success_rent_tv_startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 : 00"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:weightSum="100">

            <Button
                android:id="@+id/success_rent_btn_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:background="@null"
                android:textColor="#66CCFF"
                android:text="확인" />

            <Button
                android:id="@+id/success_rent_btn_exit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:textColor="#66CCFF"
                android:background="@null"
                android:text="종료" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>