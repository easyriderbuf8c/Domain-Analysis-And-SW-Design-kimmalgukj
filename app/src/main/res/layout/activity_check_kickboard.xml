<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.admin.CheckKickboard">

    <ImageView
        android:id="@+id/check_kickboard_img_back"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:src="@drawable/icon_back" />

    <ImageView
        android:id="@+id/check_kickboard_img_kickshare"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_kickshare" />

    <ImageView
        android:id="@+id/check_kickboard_img"
        android:layout_centerInParent="true"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_below="@+id/check_kickboard_img_kickshare"
        android:src="@drawable/img_checkkb" />

    <FrameLayout
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/check_kickboard_img"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button2" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp">

            <TextView
                android:id="@+id/check_kickboard_tv_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:text="정류장 이름" />

            <TextView
                android:layout_below="@+id/check_kickboard_tv_station"
                android:id="@+id/check_kickboard_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:text="정류장 이름" />

            <LinearLayout
                android:layout_below="@+id/check_kickboard_1"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >


                <Button
                    android:id="@+id/check_kickboard_btn_rent"
                    android:background="@drawable/button_circle"
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="대여하기" />

                <Button
                    android:id="@+id/check_kickboard_btn_return"
                    android:background="@drawable/button_circle"
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="반납하기" />

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>