<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".service.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/info_layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/info_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:text="홈"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/info_iv_notify"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_notify" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/info_tv_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:text="01000000000" />

            <TextView
                android:id="@+id/info_tv_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:text="님 안녕하세요!" />

        </LinearLayout>
        
        <FrameLayout
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/button_black" >

            <RelativeLayout
                android:id="@+id/info_layout_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/info_tv_pointLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="잔여 포인트 : " />

                <TextView
                    android:id="@+id/info_tv_point"
                    android:layout_toEndOf="@id/info_tv_pointLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="500" />

                <TextView
                    android:layout_toEndOf="@id/info_tv_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text=" point" />

                <LinearLayout
                    android:layout_below="@+id/info_tv_pointLabel"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >


                    <Button
                        android:id="@+id/info_btn_charge"
                        android:background="@drawable/button_circle"
                        android:layout_weight="1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="포인트 충전" />

                    <Button
                        android:background="@drawable/button_circle"
                        android:layout_weight="1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="이용 내역 확인" />

                </LinearLayout>

            </RelativeLayout>


        </FrameLayout>

    </LinearLayout>

</FrameLayout>