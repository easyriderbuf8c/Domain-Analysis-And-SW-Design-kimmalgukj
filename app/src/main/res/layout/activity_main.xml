<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <ImageView
        android:id="@+id/main_img_kickshare"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_kickshare" />

    <ImageView
        android:id="@+id/main_img_homeLabel"
        android:layout_below="@+id/main_img_kickshare"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:src="@drawable/img_home" />

    <LinearLayout
        android:id="@+id/main_layout_userHello"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/main_img_homeLabel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/main_tv_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="01000000000" />

        <TextView
            android:id="@+id/main_tv_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="님 안녕하세요!" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/main_layout_userHello"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/main_btn_rent"
            android:background="@drawable/button_circle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="20dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="대여하기" />

        <Button
            android:id="@+id/main_btn_return"
            android:background="@drawable/button_circle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="20dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="반납하기" />

        <Button
            android:id="@+id/main_btn_help"
            android:background="@drawable/button_circle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="고객 지원" />

        <Button
            android:id="@+id/main_btn_myinfo"
            android:background="@drawable/button_circle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="내 정보 관리" />

    </LinearLayout>
</RelativeLayout>