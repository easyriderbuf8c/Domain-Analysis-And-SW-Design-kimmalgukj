<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".service.HelpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/help_layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/help_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:text="지원"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black" />

        </RelativeLayout>

        <ImageView
            android:layout_marginHorizontal="20dp"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:src="@drawable/img_helpmsg" />

        <FrameLayout
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_black" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="13dp"
                    android:text="공지사항"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>

                <View
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="13dp"
                    android:background="#E0E0E0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="13dp"
                    android:text="이용안내"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>

                <View
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="13dp"
                    android:background="#E0E0E0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="13dp"
                    android:text="신고 / 문의"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>

                <View
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="13dp"
                    android:background="#E0E0E0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="13dp"
                    android:text="이벤트"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>

                <View
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="13dp"
                    android:background="#E0E0E0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="13dp"
                    android:text="자주 묻는 질문"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>

                <View
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="13dp"
                    android:background="#E0E0E0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="13dp"
                    android:text="보험 안내"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>

                <View
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="13dp"
                    android:background="#E0E0E0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:text="설정"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/help_tv_kakao"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:text="카카오톡 고객상담  @kickshare"
            android:textSize="12sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:text="평일, 주말 10:00 ~ 18:00"
            android:textSize="12sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:text="(점심시간 13:00 ~ 14:00 / 공휴일 휴무)"
            android:textSize="12sp"
            android:textColor="#666666"/>

    </LinearLayout>

</FrameLayout>